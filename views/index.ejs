<h2>Welcome!</h2>
<form method="POST" action="/?_method=PATCH">
  <input
    type="text"
    name="username"
    placeholder="Username"
    value="<%=
  locals.account.username %>"
    required
  />
  <br />
  <input
    type="password"
    name="password"
    placeholder="Password"
    required
  />
  <br />
  <input
    type="email"
    name="email"
    placeholder="Email"
    value="<%=
  locals.account.email %>"
    required
  />
  <br />
  <input
    type="text"
    name="fullname"
    placeholder="Fullname"
    value="<%=
  locals.account.fullname %>"
    required
  />
  <br />
  <input
    type="text"
    name="address"
    placeholder="Address"
    value="<%=
  locals.account.address %>"
    required
  />
  <br />
  <input
    type="tel"
    name="contact"
    placeholder="Contact Number"
    value="<%=
  locals.account.contact %>"
    required
  />
  <br />
  <select name="gender" required>
    <option value="" selected>Gender</option>
    <option value="Male" selected="<%= locals.gender === "Male" %>">Male</option>
    <option value="Female" selected="<%= locals.gender === "Female" %>">Female</option>
  </select>
  <br />
  <input type="submit" value="Update" />
</form>
